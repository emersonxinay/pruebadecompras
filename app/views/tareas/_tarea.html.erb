<div class="card" style="width: 18rem;">

  <img src="<%= tarea.photo %>" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= tarea.title %></h5>
    <p class="card-text"><%= tarea.desc %></p>
    <% if user_signed_in? %>
          <% if tarea.users.include?(current_user) %>
            <%= link_to "Cancelar", completar_path(tarea), class:'btn btn-danger' %>
            <% else %>
            <%= link_to "Completar", completar_path(tarea), class:'btn btn-primary' %>
          <% end %>
      <%end %>

  <%= link_to 'Ver Mas', tarea, :class => "btn btn-success txt-danger"%>

   </div>
</div>
